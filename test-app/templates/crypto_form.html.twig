<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Crypto Form Validation Test</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Cryptocurrency Form Validation</h1>

        {% if result %}
            <div class="alert {% if result.status == 'success' %}alert-success{% else %}alert-danger{% endif %} mt-3">
                <h4>{{ result.message }}</h4>
                {% if result.errors %}
                    <ul>
                        {% for error in result.errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                {% if result.data %}
                    <p><strong>Data:</strong> {{ result.data|json_encode }}</p>
                {% endif %}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            <div class="mb-3">
                {{ form_row(form.crypto_type) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.address) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.transaction_hash) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
</body>
</html>