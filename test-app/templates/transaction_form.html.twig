<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Transaction Validation Test</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Cryptocurrency Transaction Validation</h1>

        {% if result %}
            <div class="alert {% if result.status == 'success' %}alert-success{% else %}alert-danger{% endif %} mt-3">
                <h4>{{ result.message }}</h4>
                {% if result.errors %}
                    <ul>
                        {% for error in result.errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                {% if result.data %}
                    <p><strong>Validated:</strong> {{ result.data.crypto_type|upper }} transaction: {{ result.data.transaction_hash }}</p>
                {% endif %}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            <div class="mb-3">
                {{ form_row(form.crypto_type) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.transaction_hash) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}

        <div class="mt-4">
            <h3>Test Data</h3>
            <h5>Test Tron Transaction:</h5>
            <ul>
                <li><code>5f9dda478de7176e7ec76428b28053fe5b3cab9d206ac737b6eecb5b6e521861</code></li>
            </ul>
            <h5>Test Ethereum Transaction:</h5>
            <ul>
                <li><code>0x7410c7bb2538a111e698d6670426fd7a0776c4657a531cc9419c8a08b30c3434</code></li>
            </ul>
        </div>
    </div>
</body>
</html>